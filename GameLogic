package tps;

public class GameLogic {

public static final String SASSO = "sasso";
public static final String CARTA = "carta";
public static final String FORBICE = "forbice";

// Controlla se la mossa Ã¨ valida
public static boolean isValid(String m) {
if (m == null) return false;
m = m.toLowerCase();
return m.equals(SASSO) || m.equals(CARTA) || m.equals(FORBICE);
}

// Restituisce il vincitore: 0 = pareggio, 1 = p1 vince, 2 = p2 vince
public static int winner(String p1, String p2) {
if (p1.equals(p2)) return 0;

// Logica diretta come nell'originale
if ((p1.equals(SASSO) && p2.equals(FORBICE)) ||
(p1.equals(FORBICE) && p2.equals(CARTA)) ||
(p1.equals(CARTA) && p2.equals(SASSO))) {
return 1;
}

return 2;
}
}


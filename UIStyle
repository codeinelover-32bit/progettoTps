import java.awt.*;
import javax.swing.*;
import javax.swing.border.*;

public class UIStyle {

// Tavolozza Dark Mode
public static final Color BG = new Color(30, 33, 36);
public static final Color PANEL = new Color(42, 45, 49);
public static final Color ACCENT = new Color(114, 137, 218);
public static final Color TEXT = new Color(255, 255, 255);
public static final Color TEXT_SECONDARY = new Color(185, 187, 190);

public static final Color SCORE_BG = new Color(20, 20, 20);
public static final Color HOME_COLOR = new Color(46, 204, 113);
public static final Color AWAY_COLOR = new Color(52, 152, 219);

// Font
public static final Font SCORE_FONT = new Font("Monospaced", Font.BOLD, 48);
public static final Font TITLE = new Font("Segoe UI", Font.BOLD, 28);
public static final Font NORMAL = new Font("Segoe UI", Font.PLAIN, 16);
public static final Font BUTTON = new Font("Segoe UI", Font.BOLD, 18);

// Crea un pulsante con stile uniforme
public static JButton createButton(String text) {
JButton button = new JButton(text.toUpperCase());
button.setFont(BUTTON);
button.setForeground(Color.WHITE);
button.setBackground(ACCENT);
button.setFocusPainted(false);
button.setContentAreaFilled(true);
button.setCursor(new Cursor(Cursor.HAND_CURSOR));

// Bordo arrotondato con padding
button.setBorder(BorderFactory.createCompoundBorder(
new LineBorder(ACCENT, 1, true),
BorderFactory.createEmptyBorder(15, 25, 15, 25)
));

// Effetto hover
button.addMouseListener(new java.awt.event.MouseAdapter() {
@Override
public void mouseEntered(java.awt.event.MouseEvent e) {
button.setBackground(ACCENT.brighter());
}

@Override
public void mouseExited(java.awt.event.MouseEvent e) {
button.setBackground(ACCENT);
}
});

return button;
}

// Crea un pannello "card" con bordo morbido
public static JPanel createCardPanel() {
JPanel panel = new JPanel();
panel.setBackground(PANEL);

panel.setBorder(BorderFactory.createCompoundBorder(
new LineBorder(new Color(60, 60, 60), 1, true),
BorderFactory.createEmptyBorder(20, 20, 20, 20)
));

return panel;
}
}
